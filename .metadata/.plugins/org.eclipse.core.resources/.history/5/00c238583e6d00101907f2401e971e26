package com.jsp.driver;

import java.util.ArrayList;
import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.EntityTransaction;
import javax.persistence.Persistence;

import com.jsp.entity.Student;
import com.jsp.entity.Subject;

public class Insert {

	public static void main(String[] args) {
		
		EntityManager entityManager = Persistence.createEntityManagerFactory("sachin").createEntityManager();
		EntityTransaction entityTransaction = entityManager.getTransaction();
		
		Student student = new Student("Shivani",21);
		Subject subject = new Subject("Java",60);
		
		List<Subject> list1 = new ArrayList<Subject>();
		list1.add(subject);
		student.setSubjects(list1);
		
		List<Student> list2 = new ArrayList<Student>();
		list2.add(student);
		subject.setStudents(list2);
		
		entityTransaction.begin();
		entityManager.persist(subject);
		entityManager.persist(student);
		entityTransaction.commit();

	}

}
